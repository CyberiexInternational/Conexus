(defparameter *stat-baseline* 50)

(defparameter *agents* '())

(defstruct agent
	   id
	   name
	   mind
	   body
	   dex
	   str
	   cool
	   int
	   age
	   faction
	   cash
	   location
	   notes) 

(defun new-agent (id name default-stat age faction cash location notes)
	   (make-agent :id id :name name :mind default-stat :body default-stat :dex default-stat :str default-stat :cool default-stat :int default-stat :age age :faction faction :cash cash :location location :notes notes)) 
